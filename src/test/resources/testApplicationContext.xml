<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop" xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
        http://www.directwebremoting.org/schema/spring-dwr http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd">

    <!--
        Master App context
    -->
    <import resource="com/vodafone/gdma/web/web-beans.xml" />
    <import resource="com/vodafone/gdma/web/dwr-beans.xml" />
    <import resource="com/vodafone/gdma/aop.xml" />
    
    <import resource="com/vodafone/gdma/dao/hibernate/hibernate-beans.xml" />
    <import resource="com/vodafone/gdma/dao/jdbc/jdbc-beans.xml" />

    
    <bean id="dataSourcePool" class="com.vodafone.gdma.util.DataSourcePoolImpl" />
    
     <bean id="dataSource" class="oracle.jdbc.pool.OracleDataSource">
        <property name="URL" value="jdbc:oracle:thin:@192.168.1.187:1521:orcl" />
        <property name="user" value="GDMADEV" />
        <property name="password" value="GDMADEV" />
        <property name="connectionCachingEnabled" value="true" />
        <property name="connectionCacheProperties">
            <props>
                <prop key="MinLimit">5</prop>
                <prop key="MaxLimit">25</prop>
            </props>
        </property>
    </bean>
    
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="alwaysUseMessageFormat" value="true" />
        <property name="basenames">
            <list>
                <value>gdma</value>
            </list>
        </property>
    </bean>
    <bean id="serverUtil" class="com.vodafone.gdma.util.ServerUtil">
        <property name="serverDao" ref="serverDao" />
        <property name="tableDao" ref="tableDao" />
        <property name="dataSourcePool" ref="dataSourcePool" />
    </bean>
    <bean id="gdmaFacade" class="com.vodafone.gdma.GdmaFacade">
        <property name="serverDao" ref="serverDao" />
        <property name="tableDao" ref="tableDao" />
        <property name="columnDao" ref="columnDao" />
        <property name="connectionTypeDao" ref="connectionTypeDao" />
        <property name="userDao" ref="userDao" />
        <property name="dynamicDao" ref="dynamicDao" />
    </bean>
</beans>